[Unit]
Description=Play Splash Video
RequiresMountsFor=/run
DefaultDependencies=no
After=local-fs.target
Requires=dev-fb0.device
ConditionPathExists=/etc/init.d/playvideo.sh

[Service]
ExecStartPre=/bin/sleep 10
ExecStart=/usr/bin/playvideo.sh
StandardOutput=tty
StandardError=tty
TTYPath=/dev/tty1
RemainAfterExit=no
Type=simple


[Install]
WantedBy=sysinit.target
